        SELECT *
        FROM files
        WHERE
                p_table = #{pTable}
            AND p_no = #{pNo}
        ORDER BY seq ASC
    </select>

    <!-- ë¶€ëª¨ í…Œì´ë¸” ê¸°ì¤€ ì‚­ì œ -->
